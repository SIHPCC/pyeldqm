# Include YAML scenario configurations
recursive-include configs *.yaml

# Include Dash CSS assets and images
recursive-include app/assets *.css *.png *.jpg *.jpeg *.svg *.ico

# Include chemicals database (required at runtime)
include data/chemicals_database/chemicals_database.sqlite3
include data/__init__.py
include data/chemicals_database/__init__.py

# Exclude large / generated content
exclude outputs
prune  outputs
prune  cache
prune  data/aloha_cases
prune  data/geographic_data
prune  data/population
prune  data/thermodynamics_data
prune  data/weather_samples
